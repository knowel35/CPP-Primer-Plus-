//chap4.2: Rewrite Listing 4.4, using the C++ string class instead of char arrays.

#include <iostream>

int main(void)
{
    std::string name;
    std::string dessert;

    std::cout << "Enter your name: ";
    std::cin >> name;
    std::cout << "Enter your favorite dessert: ";
    std::cin >> dessert;
    std::cout << "I have some delicious " << dessert;
    std::cout << " for you, " << name << ".\n";

    return 0;
}
